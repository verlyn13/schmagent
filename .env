# Schmagent Configuration
# Copy this file to .env and customize with your values

# Application Settings
APP_NAME=schmagent
DEBUG=true
LOG_LEVEL=DEBUG  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Paths (using XDG standard locations created by setup script)
CONFIG_PATH=~/.config/schmagent
DATA_PATH=~/.local/share/schmagent
SECRETS_PATH=/home/verlyn13/.secrets/schmagent
API_KEYS_FILE=api_keys.json  # Located in SECRETS_PATH

# AI Model Settings
DEFAULT_MODEL=openai  # Options: openai, anthropic, google, perplexity, openrouter, local

# Note: API keys should preferably be stored in ~/.secrets/schmagent/api_keys.json
# The following environment variables are supported for development/testing:
# OPENAI_API_KEY=your_openai_api_key
# ANTHROPIC_API_KEY=your_anthropic_api_key
# GOOGLE_API_KEY=your_google_api_key
# GOOGLE_PROJECT_ID=your_google_project_id
# OPENROUTER_API_KEY=your_openrouter_api_key
# PERPLEXITY_API_KEY=your_perplexity_api_key
# ELEVENLABS_API_KEY=your_elevenlabs_api_key

# OpenAI Model Settings
OPENAI_MODEL=gpt-4o  # Options: gpt-4-turbo, gpt-4o, gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2048

# Anthropic Model Settings
ANTHROPIC_MODEL=claude-3-5-sonnet  # Options: claude-3-5-sonnet, claude-3-opus, claude-3-haiku
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=4096

# Google Model Settings
GOOGLE_MODEL=gemini-pro  # Options: gemini-pro, gemini-ultra
GOOGLE_TEMPERATURE=0.7
GOOGLE_MAX_TOKENS=2048

# UI Settings
THEME=system  # Options: system, light, dark
WINDOW_WIDTH=800
WINDOW_HEIGHT=600
CODE_HIGHLIGHTING=true
ENABLE_SCREENSHOTS=true

# Session Management
SESSION_PERSISTENCE=true
MAX_HISTORY_SESSIONS=10
MESSAGE_HISTORY_LIMIT=50

# Security
API_KEY_ENCRYPTION=true
CLIPBOARD_AUTO_CLEAR=false  # Clear clipboard after capturing text
CLIPBOARD_CLEAR_DELAY=60  # Time in seconds

# Notifications
ENABLE_NOTIFICATIONS=true
NOTIFICATION_SOUND=true

# Keyboard Shortcuts
GLOBAL_SHORTCUT=<Super>s  # GNOME keyboard shortcut to launch app

PYTHONPATH=${PYTHONPATH}:/usr/lib/python3/dist-packages